<%- include("./../partials/header.ejs") %>
<div class="container col-xl-10 col-xxl-8 px-4 py-5">
    <% if (message) { %>
    <div class="row">
        <div class="alert alert-danger" role="alert">
            <%= message %>
        </div>
    </div>
    <% } %>
    <div class="row align-items-center g-lg-5 py-5">
        <div class="col-lg-7 text-center text-lg-start">
            <h1 class="display-4 fw-bold lh-1 mb-3">Register</h1>
            <p class="col-lg-10 fs-4">by <a target="_blank" href="https://github.com/firzaaditiya">Firza Aditiya</a></p>
        </div>
        <div class="col-md-10 mx-auto col-lg-5">
            <form class="p-4 p-md-5 border rounded-3 bg-light" method="post" action="/users/register" enctype="application/x-www-form-urlencoded">
                <div class="form-floating mb-3">
                    <input name="username" type="text" class="form-control" id="username" placeholder="username">
                    <label for="username">Username</label>
                </div>
                <div class="form-floating mb-3">
                    <input name="name" type="text" class="form-control" id="name" placeholder="name">
                    <label for="name">Name</label>
                </div>
                <div class="form-floating mb-3">
                    <input name="password" type="password" class="form-control" id="password" placeholder="password">
                    <label for="password">Password</label>
                </div>
                <button class="w-100 btn btn-lg btn-primary" type="submit">Register</button>
            </form>
        </div>
    </div>
</div>
<%- include("./../partials/footer.ejs") %>